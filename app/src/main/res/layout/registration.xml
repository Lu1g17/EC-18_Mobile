<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/SectionTextViewRegistration"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Registrazione"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/TopDividerRegistration"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollViewRegistration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/GoImageButtonRegistration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopDividerRegistration">


        <LinearLayout
            android:id="@+id/LinearLayoutRegistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PersonalTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="Personali"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/NameTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Nome:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/NameRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/SurnameTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Cognome:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/SurnameRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/GenderTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Sesso:"
                android:textSize="20sp" />
            
            <Spinner
                android:id="@+id/GenderRegistration"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:entries="@array/Sesso"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/BirthDateTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:inputType="date"
                android:text="* Data di Nascita:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BirthDateRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/FiscalCodeTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Codice Fiscale:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/FiscalCodeRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/BirthTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="Nascita"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/BirthNationTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Nazione:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BirthNationRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/BirthProvinceTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Provincia:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BirthProvinceRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/BirthCityTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Città"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/BirthCityRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/ResidenceTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="Residenza"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/ResidenceNationTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Nazione:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ResidenceNationRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/ResidenceRegionTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Regione:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ResidenceRegionRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/ResidenceProvinceTextViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="* Provincia:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ResidenceProvinceRegistration"
                android:layout_width="wrap_content"
