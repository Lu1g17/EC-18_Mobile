<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ConstraintLayoutCatalog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/SectionTextViewCatalog"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Catalogo"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LoginButtonCatalog"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/TopDividerCatalog"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/GenderBarContainerCatalog"
        layout="@layout/gender_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/CategoryBarContainerCatalog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TopDividerCatalog" />

    <include
        android:id="@+id/CategoryBarContainerCatalog"
        layout="@layout/category_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GenderBarContainerCatalog" />

    <ScrollView
        android:id="@+id/FilterScrollViewCatalog"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/BottomDividerCatalog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CategoryBarContainerCatalog" >

        <RadioGroup
            android:id="@+id/RadioGroupCatalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox android:id="@+id/checkbox_meat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wewe"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/checkbox_cheese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wow"
                android:onClick="onCheckboxClicked"/>

            <RadioButton
                android:id="@+id/SwimSuitRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costumi"/>

            <RadioButton
                android:id="@+id/SweatshirtsRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Felpe"/>

            <RadioButton
                android:id="@+id/JeansRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jeans"/>

            <RadioButton
                android:id="@+id/SportsRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sportivo"/>

            <RadioButton
                android:id="@+id/TrousersRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pantaloni"/>

            <RadioButton
                android:id="@+id/T-ShirtsRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T-Shirts"/>

            <RadioButton
                android:id="@+id/SneakersRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sneakers"/>

            <RadioButton
                android:id="@+id/FlatRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basse"/>

            <RadioButton
                android:id="@+id/BootsRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stivali"/>

            <RadioButton
                android:id="@+id/BagsRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borse"/>

            <RadioButton
                android:id="@+id/HatsRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cappelli"/>

            <RadioButton
                android:id="@+id/WatchesRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orologi"/>

            <RadioButton
                android:id="@+id/GlassesRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occhiali"/>

            <RadioButton
                android:id="@+id/RingsRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anelli"/>

            <RadioButton
                android:id="@+id/BraceletsRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bracciali"/>

            <RadioButton
                android:id="@+id/NecklacesRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collane"/>

            <RadioButton
                android:id="@+id/EarringsRadioButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orecchini"/>

            <Spinner
                android:id="@+id/spinnertaglia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Taglia"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.437" />

            <Spinner
                android:id="@+id/spinnercolore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Colore"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.437" />
        </RadioGroup>

    </ScrollView>

    <ScrollView
        android:id="@+id/ImageScrollViewCatalog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/BottomDividerCatalog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FilterScrollViewCatalog"
        app:layout_constraintTop_toBottomOf="@id/CategoryBarContainerCatalog">

        <TableLayout
            android:id="@+id/TableLayoutCatalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow android:id="@+id/TableRowCatalog1">

                <include
                    android:id="@+id/LeftImageContainerCatalog1"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp" />

                <include
                    android:id="@+id/RightImageContainerCatalog1"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp" />

            </TableRow>

            <TableRow android:id="@+id/TableRowCatalog2">

                <include
                    android:id="@+id/LeftImageContainerCatalog2"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp" />

                <include
                    android:id="@+id/RightImageContainerCatalog2"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp" />

            </TableRow>

            <TableRow android:id="@+id/TableRowCatalog3">

                <include
                    android:id="@+id/LeftImageContainerCatalog3"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp" />

                <include
                    android:id="@+id/RightImageContainerCatalog3"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp" />

            </TableRow>

            <TableRow android:id="@+id/TableRowCatalog4">

                <include
                    android:id="@+id/LeftImageContainerCatalog4"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp" />

                <include
                    android:id="@+id/RightImageContainerCatalog4"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp" />

            </TableRow>

            <TableRow android:id="@+id/TableRowCatalog5">

                <include
                    android:id="@+id/LeftImageContainerCatalog5"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp" />

                <include
                    android:id="@+id/RightImageContainerCatalog5"
                    layout="@layout/image_layout"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp" />

            </TableRow>

        </TableLayout>
    </ScrollView>

    <View
        android:id="@+id/BottomDividerCatalog"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/BottomBarContainerCatalog"
        layout="@layout/bottom_bar"
        android:layout_width="410dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/BottomDividerCatalog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.495" />

</androidx.constraintlayout.widget.ConstraintLayout>