<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/SectionTextViewData"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Data"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EuroTextViewData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="€"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/TopDividerData"
        app:layout_constraintEnd_toStartOf="@+id/AmountTextViewData" />

    <TextView
        android:id="@+id/AmountTextViewData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="0.00"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/TopDividerData"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/TopDividerData"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollViewData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/PaypalImageViewData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopDividerData">


        <LinearLayout
            android:id="@+id/LinearLayoutData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ShippingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:text="Spedizione"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/ShippingNationTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Nazione"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ShippingRegionTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Regione"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ShippingProvinceTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Province"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ShippingCityTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Città"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ShippingAddressTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Indirizzzo"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/ShippingCAPTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="CAP"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/BillingTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:text="Fatturazione"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/BillingNationTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Nazione"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/BillingRegionTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Regione"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/BillingProvinceTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Province"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/BillingCityTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Città"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/BillingAddressTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="Indirizzzo"
                android:textSize="20sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/BillingCAPTextViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:text="CAP"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/PaypalImageViewData"
        android:layout_width="54dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/paypal" />

</androidx.constraintlayout.widget.ConstraintLayout>